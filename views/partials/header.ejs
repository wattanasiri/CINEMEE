</head>
<body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        function myFunction() {
            var x = document.getElementById("navbar-user");
            if (x.className === "navbar-main") {
                x.className += " responsive";
            } else {
                x.className = "navbar-main";
            }
        }
        
    $(document).ready(function(){
        $("a").on('click', function(event) {
            if (this.hash !== "") {
                event.preventDefault();
                var hash = this.hash;
                $('html, body').animate({ scrollTop: $(hash).offset().top}, 200, function(){
                    window.location.hash = hash;
                });
            } 
        });
    });
    </script>
    <div class="container header text-light">
        <div class="navbar-main" id="navbar-user">
            <a href="/"><img src="/img/CINEMEE-logo-light.png" class="logo mt-0"></a>
            <a href="/movie" class="link">Movies</a>
            <a href="/cinema" class="link">Cinemas</a>
            <a href="/promotion" class="link">Promotions</a>
            <a href="javascript:void(0);" class="icon" onclick="myFunction()">
              <i class="fad fa-bars fa-2x mt-2"></i>
            </a>            
            <% if(!currentUser){ %>
            <a href="/login" class="header-btn nav-right">Login</a>
            <% }else{ %>
            <a class="dropdown">
                <a class="dropdown-toggle text-light header-btn nav-right" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="<%= currentUser.image %>" height="30px" width="30px" class="me-2 rounded-circle"><span><%= currentUser.username %></span>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
                    <li><a class="dropdown-item" href="/profile/<%= currentUser._id %>">My Profile</a></li>
                    <li><a class="dropdown-item" href="/profile/<%= currentUser._id %>">Favorite</a></li>
                    <li><a class="dropdown-item" href="/profile/<%= currentUser._id %>">History</a></li>
                    <li><a class="dropdown-item border-top border-secondary" href="/logout">Logout</a></li>                            
                </ul>
            </a>
            <% }; %>
            <a class="nav-right">
                <form class="search-container mt-1" action="/search" method="POST">
                    <input id="search-box" type="text" class="search-box" name="search" placeholder="Movie title, Type, Cinema">
                    <label for="search-box"><span class="fas fa-search search-icon"></span></label>
                    <input type="submit" id="search-submit" />
                </form>
            </a>
          </div>
    </div>